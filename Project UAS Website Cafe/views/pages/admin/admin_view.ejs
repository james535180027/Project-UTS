  <!-- bagian view reservasi -->
  <div class="container padding-reservasi">

    <h2 class="judul-admin-view">Daftar Permintaan Reservasi</h2>

    <!-- tabel -->
    <div class="table-responsive">
      <form action="/:id" method="get">
        <table class="table">
          <thead class="thead-dark">
              <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nama</th>
                  <th scope="col">Alamat Email</th>
                  <th scope="col">Nomor Telepon</th>
                  <th scope="col">Jumlah Orang</th>
                  <th scope="col">Waktu</th>
                  <th scope="col">Konfirmasi</th>
              </tr>
          </thead>
          <tbody>
            <%= i=1; %> 
            <% reservasi.forEach(function(bookr){ %> 
              <tr id="barisData">
                <th> <%= i++; %>  </th>
                <td> <%= bookr.nama %>  </td>
                <td> <%= bookr.email %>  </td>
                <td> <%= bookr.no_telp %>  </td>
                <td> <%= bookr.pengunjung %> </td>
                <td> <%= bookr.waktu %></td>
                <td>
                  <a class="btn btn-success" href="/admin/confirmed/<%= bookr.id  %> " data-toggle="tooltip" data-placement="bottom" id="acc" title="Terima reservasi">&#10003;</button>
                  <a class="btn btn-danger"  data-toggle="tooltip" data-placement="bottom" id="reject" title="Tolak reservasi">&#10005;</button>
                </td>
              </tr>
            <% }); %> 
          </tbody>
      </table>
      <div class="modal fade" id="ModalTolak" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalCenterTitle">Tolak Reservasi</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Alasan penolakan</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary" id="btnTolak">Kirim</button>
            </div>
          </div>
        </div>
      </div>
  </div>
      </form>

  </div>
  <!-- akhir bagian view reservasi -->