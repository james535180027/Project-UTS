<div class="container">
    <h2 class="judul-login">Pengaturan Akun</h2>
    <div class="card card-login">
        <div class="card-body">
            <form>
                <label for="exampleInputEmail1">Username: user123</label>
                <br>
                <label for="exampleInputPassword1">Alamat email: user123@email.com</label>
                <div class="form-group form-group-login">
                    <label for="exampleInputPassword1">Nomor telepon: 08123456789</label>
                </div>
                <div class="form-group form-group-login">
                    <label for="exampleInputEmail1">Ubah nomor telepon</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Masukan nomor telepon yang baru">
                </div>

                <h4 class="pembatas-form-login"><span>Ubah password</span></h4>

                <div class="form-group form-group-registrasi">
                    <label for="exampleInputPassword1">Password baru</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" required>
                  </div>
                  <div class="form-group form-group-registrasi">
                      <label for="exampleInputPassword2">Konfirmasi Password baru</label>
                      <input type="password" class="form-control" id="exampleInputPassword2" required>
                  </div>
                  <button type="button" class="btn btn-danger btn-lg btn-block" id="gantiPass">Simpan</button>
            </form>
        </div>
    </div>
  </div>