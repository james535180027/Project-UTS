<div class="container">
    <h2 class="judul-login">Pengaturan Akun</h2>
    <div class="card card-login">
        <div class="card-body">
            <form action="/settings" method="post">
                <label for="exampleInputEmail1">Username: <%= username %></label>
                <br>
                <label for="exampleInputPassword1">Alamat email: <%= email %></label>
                <div class="form-group form-group-login">
                    <label for="exampleInputPassword1">Nomor telepon: <%= telp %></label>
                </div>
                <!-- <div class="form-group form-group-login">
                    <label for="exampleInputEmail1">Ubah nomor telepon</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Masukan nomor telepon yang baru">
                </div> -->

                <h4 class="pembatas-form-login"><span>Ubah password</span></h4>

                <div class="form-group form-group-registrasi">
                    <label for="ubahPassword1">Password Baru</label>
                    <input type="password" class="form-control" name="ubahPassword1" required>
                  </div>
                  <div class="form-group form-group-registrasi">
                      <label for="ubahPassword2">Konfirmasi Password Baru</label>
                      <input type="password" class="form-control" name="ubahPassword2" required>
                    </div>
                    <% if(locals.error_updatePassword){ %> 
                        <div class="alert alert-danger" role="alert">
                          <%= error_updatePassword %>
                        </div>
                      <% } %>
                  <button type="submit" class="btn btn-danger btn-lg btn-block" id="gantiPass">Simpan</button>
            </form>
        </div>
    </div>
  </div>